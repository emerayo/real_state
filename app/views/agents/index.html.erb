<p style="color: green"><%= notice %></p>

<h1>Agents</h1>

<div id="agents">
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @agents.each do |agent| %>
        <tr>
          <td><%= agent.first_name %></td>
          <td><%= agent.last_name %></td>
          <td><%= agent.email %></td>
          <td><%= link_to 'Show', agent %></td>
          <td><%= link_to 'Edit', edit_agent_path(agent) %></td>
          <td><%= button_to 'Destroy', agent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New agent', new_agent_path %>
